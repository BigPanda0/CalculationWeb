@model WebApplication_Aimagambetov.Models.ViewModels.RegisterModel

@{ ViewData["Title"] = "Регистрация"; }

<style type="text/css">
    span {
        color: red;
    }
</style>

<div class="container">
    <div class="row justify-content-center ">

        <div class="col-3">
            <h2 class="mt-5">Регистрация</h2>

            <form class="form-signin" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <div class="form-group justify-content-center">
                        <label class="form-label" asp-for="Login">Введите логин</label><br />
                        <input class="form-control" type="text" asp-for="Login" />
                        <span asp-validation-for="Login" />
                    </div>
                    <div class="form-group justify-content-center">
                        <label class="form-label" asp-for="Password">Введите пароль</label><br />
                        <input class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="form-group justify-content-center">
                        <label class="form-label" asp-for="ConfirmPassword">Повторите пароль</label><br />
                        <input class="form-control" asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" />
                    </div>
                    <div class="form-group text-center">
                        <input class="btn btn-outline-success" type="submit" value="Зарегистрироваться!"  />
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>