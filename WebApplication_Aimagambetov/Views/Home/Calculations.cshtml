@using WebApplication_Aimagambetov.Models.ViewModels

@{ ViewData["Title"] = "Наборы исходных данных"; }

@model List<CalculationViewModel>
@{
    int i = 1;
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Название расчёта</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@i</th>
                <td>
                    <a href="@Url.Action("Index","Home",item)">@item.Name</a>
                </td>
                <td>
                    <a  href="@Url.Action("DeleteCalculate","Home",item)">Удалить</a>
                </td>
            </tr>
            i++;

        }

    </tbody>
</table>